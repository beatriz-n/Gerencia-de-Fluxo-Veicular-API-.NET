<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Mensagem</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="@(() => MudDialog.Close(DialogResult.Ok("Negar")))">
            Negar Acesso
        </MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="@(() => MudDialog.Close(DialogResult.Ok("Cadastrar")))">
            Cadastrar
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string Mensagem { get; set; } = string.Empty;
}
